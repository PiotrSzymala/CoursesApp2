{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CourseApp appsetings schema",
  "description": "Defines schema for appseting",
  "type": "object",
  "required": [
    "ConnectionStrings",   
    "Jwt"
  ],
  "properties": {
    "ConnectionStrings": {
      "$ref": "#/definitions/ConnectionStrings"
    },
    "Jwt": {
      "$ref": "#/definitions/Jwt"
    },
    "OAuth": {
      "$ref": "#/definitions/OAuth"
    }   
  },
  "definitions": {
    "ConnectionStrings": {
      "type": "object",
      "required": [
        "MsSqlConnectionString"
      ],
      "additionalProperties": false,
      "properties": {
        "MsSqlConnectionString": {
          "type": "string"
        }
      }
    },
    "OAuth": {
      "type": "object",
      "required": [
        "clientId",
        "clientSecret"
      ],
      "additionalProperties": false,
      "properties": {
        "clientId": {
          "type": "string"
        },
        "clientSecret": {
          "type": "string"
        }
      }
    },
    "Jwt": {
      "type": "object",
      "description": "Required JWT settings set with *env* on production",
      "required": [
        "Issuer",
        "Audience",
        "Key"
      ],
      "additionalProperties": false,
      "properties": {
        "Issuer": {
          "type": "string"
        },
        "Audience": {
          "type": "string"
        },
        "Key": {
          "type": "string"
        }
      }
    }
  }
}